<div class="information">
  <div class="patient-name">
    <h1 class="text-success text-left"><%= @patient.name %>様</h1>
  </div>
  <div class="command text-center">
    <% if user_signed_in? && [1, 2, 3, 4, 5, 6].include?(current_user.genre_name_before_type_cast) %>
      <%= link_to '基本情報', patient_path(@patient.id), class: "btn btn-info text-white ms-2" %>
      <%= link_to 'タイムライン', patient_posts_path(@patient.id), class: "btn btn-primary text-white ms-2" %>
      <%= link_to '過去のケア一覧', patient_cares_path(@patient.id), class: "btn btn-warning text-white ms-2" %>
      <%= link_to '記録する', new_patient_care_path(@patient.id), class: "btn btn-success text-white ms-2" %>
    <% end %>
  </div>
</div>