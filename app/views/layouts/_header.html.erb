<header class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark">
  <div class="container">
   <div class="navbar-brand d-block">
     <%= link_to root_path do %>
      <%= image_tag 'image/twitter_header_photo_1.png', size: "100x80", alt: "アイコン" %>
     <% end %>
   </div>
   <div>
    <% if user_signed_in? %>
     <span class="navbar nav-center text-primary">ログイン：<%= current_user.name %> 様</span><br>
    <% end %>
   </div>

  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="navbar-nav ml-auto">
     <!--<div class="navbar nav-left" id="navbarToggleExternalContent">-->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
       <ul class="navbar-nav ml-auto">
        <!--ご家族様がログインした時-->
        <% if user_signed_in? && current_user.genre_name_before_type_cast == 0 %>
         <%= link_to '利用者様検索', search_path, class: "btn btn-outline-light text-white ms-2 btn-sm" %>
         <%= link_to 'サイトについて', homes_about_path,class: "btn btn-outline-light text-white ms-2 btn-sm" %>
         <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-outline-light text-white ms-2 btn-sm" %>
       <!--ご家族様以外がログインした時-->
        <% elsif user_signed_in? && [1, 2, 3, 4, 5, 6].include?(current_user.genre_name_before_type_cast) %>
         <%= link_to '利用者様検索', search_path, class: "btn btn-outline-light text-white ms-2 btn-sm" %>
         <%= link_to '記録者情報', user_path(current_user.id), class: "btn btn-outline-light text-white ms-2 btn-sm" %>
         <%= link_to 'サイトについて', homes_about_path,class: "btn btn-outline-light text-white ms-2 btn-sm" %>
         <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-outline-light text-white ms-2 btn-sm" %>
        <!--<--ログインしていない時-->
        <% else %>
          <%= link_to 'サイトについて', homes_about_path,class: "btn btn-outline-light text-warning ms-4 btn-sm" %>
          <%= link_to '新規登録', new_user_registration_path,class: "btn btn-outline-light text-warning ms-4 btn-sm" %>
          <%= link_to 'ログイン', new_user_session_path,class: "btn btn-outline-light text-warning ms-4 btn-sm" %>
        <% end %>
       </ul>
      </div>
     </div>
    </nav>
  </div>
</header>
