<div class = "col-md-4 offset-md-1">
  <%#= @cares.patient.name  %>
  <%= link_to "データ", cares_path(@care.id) %>
  <%= form_with model: @care, local:true do |f| %>
  <!--<div class = "form-group">-->
    <%#= f.text_field :user_name, class: 'form-control' %>
  <!--</div>-->
    <div class = "form-group">
      <%= f.label :体重 %>
      <%= f.text_area :weight, class: 'form-control' %>
      <%= f.label :体温 %>
      <%= f.text_area :body_temperature, class: 'form-control' %>
      <%= f.label :血圧 %>
      <%= f.text_area :blood_pressure, class: 'form-control' %>
      <%= f.label :脈拍 %>
      <%= f.text_area :pulse_rate, class: 'form-control' %>
      <%= f.label :ケア詳細 %>
      <%= f.text_area :detail, class: 'form-control' %>
      <%= f.label :日時 %>
      <%= f.date_field :start_time ,class: 'form-control' %>
    </div>
    <div class = "form-group">
      <%= f.submit '登録する', class: "btn btn-success" %>
    </div>
  <% end %>
</div>