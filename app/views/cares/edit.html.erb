<div class = "col-md-4 offset-md-1">
  <div class="information">
    <%= render 'patients/information' %>
  </div>

  <div class = "form-group">
      <%= form_with model: [@patient, @care], local:true do |f| %>
      <%= f.label :記載日 %>
      <%= f.date_field :start_time ,class: 'form-control' %>
      <h4>体重</h4>
        <%= f.text_field :weight,class: 'form-control' %>
      <h4>体温</h4>
        <%= f.text_field :body_temperature,class: 'form-control' %>
      <h4>血圧</h4>
        <%= f.text_field :blood_pressure,class: 'form-control' %>
      <h4>脈拍</h4>
        <%= f.text_field :pulse_rate,class: 'form-control' %>
      <h4>ケア内容</h4>
        <%= f.text_field :detail,class: 'form-control' %>
      <div>
        <%= f.submit '更新する', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>