<div class = "col-md-8 offset-md-1">
 <div class="header-name">
    <%= @patient.name %>様
  </div>
  <div class ="graph">
   <h2>＜体重推移＞</h2>
   <!--careデータのグラフ表示-->
   <%= line_chart Care.group(:weight, :start_time).count,height: "400px",xtitle: "日", ytitle: "体重",min: 30, max: 80, curve: false %>
   <%#= line_chart @care_graphs, height: "400px",xtitle: "日", ytitle: "体重",min: 30, max: 80, curve: false, empty: "データがありません" %>
   <%#= line_chart @cares.chart_date, xtitle: "日付", ytitle: "体重",min: 30, max: 80, width: "400px", height: "200px", curve: false, empty: "データがありません" %>
  </div>
 <!--careデータのテーブル表示-->
   <h2>＜データ一覧＞</h2>
    <table class="table table-striped">
     <thead>
      <tr>
       <th>記録日</th>
       <th>体重</th>
       <th>体温</th>
       <th>血圧</th>
       <th>脈拍</th>
      </tr>
     </thead>
     <tbody>
       <tr>
       <% @cares.each do |care| %>
        <td><%= link_to care.start_time.strftime("%Y-%m-%d"), patient_care_path(patient_id: @patient.id, id: care.id) %></td>
        <td><%= care.weight %></td>
        <td><%= care.body_temperature %></td>
        <td><%= care.blood_pressure %></td>
        <td><%= care.pulse_rate %></td>
      </tr>
       <% end %>
      </tbody>
    </table>

 <!--careが行われた日のカレンダー表示-->
 <div class="calendar">
  <%= month_calendar events: @cares do |date, cares| %>
    <%= date.day %>
   <% cares.each do |care| %>
    <div>
     <%= link_to care.user.name, patient_care_path(patient_id: care.patient_id, id: care.id) %>
    </div>
   <% end %>
  <% end %>
</div>

<%= link_to "新しく記録する", new_patient_care_path, class: "btn btn-success" %>


</div>
