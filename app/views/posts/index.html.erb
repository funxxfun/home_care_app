<div class = "col-md-8 offset-md-1">
  <div class="header-name">
    <%= @patient.name %>様
  </div>
  <div class="timeline-form d-flex justify-content-end">
  <!--タイムライン投稿フォーム-->
    <div class="col-12 clearfix">
      <div class="float-right test-box">
    <h2>タイムライン投稿</h2>
    <%= form_with model: [@patient], local:true do |f| %>
      <%= f.file_field :image %>
      <h4>コメントを投稿する</h4>
      <%= f.text_area :content %>
      <%= f.submit '投稿する' %>
    <% end %>
    </div>
  </div>
  <!--投稿表示画面-->
  <div class="timeline-index col-md-6 offset-md-1 ">
    <h1>投稿画面表示</h1>
      <table>
        <% @posts.each do |post| %>
          <tr>投稿日：<td><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></td></tr>
          <tr><td><%= post.user.name %>さんの投稿</td></tr>
          <tr><td><%= post.content %></td></tr>
          <tr><td>
            <% if post.image.attached? %>
              <%= image_tag post.image.variant(resize:'300x300') %>
            <% end %>
          </td></tr>
      </table>
        <% end %>
  </div>

</div>